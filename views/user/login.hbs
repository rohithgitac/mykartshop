<div class="container" style="margin-top: 6rem;">
    <div class="row ">
        <div class="col-md-6 mt-4 pt-4">
            <h2 class="text-white">Login, start your shopping</h2>
            <form action="/login" method="POST">
                <div class="form-group pt-4">
                    <label class="text-white"  for="">Email</label>
                    <input type="text" name="email" class="form-control" placeholder="enter your email">
                    {{#if Emailerr}}
                <label style="color:red; background-color: rgb(233, 230, 147);border-radius: 3px;">Invalid Email Id</label>
                    {{/if}}
                </div> 
                <div class="form-group">
                    <label class="text-white" for="">Password</label>
                    <input type="text" name="password" class="form-control" placeholder="enter your password">
                    {{#if loginError}}
                       <label style="color: red;background-color: rgb(233, 230, 147);border-radius: 3px;">Invalid password</label>   
                    {{/if}}
                    {{#if Emailerr}}
                <label style="color:red;background-color: rgb(233, 230, 147);border-radius: 3px;">Invalid password</label>
                    {{/if}}
                </div> 
                <a style="color: rgb(178, 248, 250);" href="/signup">Create new account</a>
                <button type="submit" class="btn btn-success float-right ">Login</button>
            </form>
        </div>
    </div>
</div>