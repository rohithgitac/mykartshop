<div class="container" style="margin-top: 6rem;">
    <div class="row">
        <div class="col-md-12 mt-4 text-white">
            <h2>Profile Informations</h2>
            <form id="signup-form" name="formname" action="/profile" method="post">
            <div class="row">
            <div class="col-md-6 mt-1 text-white">
                <div class="form-group pt-4">
                    <label for="">Name</label>
                    <input id="name" type="text" name="name" required class="form-control" value="{{userinfos.name}}" >
                </div>    
                <div class="form-group">
                    <label for="">Email</label>
                    <input id="email" type="text" name="email" class="form-control" value="{{userinfos.email}}"  required>
                </div> 
                <div class="form-group">
                    <label for="">Password</label>
                    <input id="password" type="text" name="password" class="form-control" placeholder="Enter your new/old password"  required>
                </div> 
            </div>   
            <div class="col-md-6  mt-1 text-white">
                    <div class="form-group pt-4">
                    <label for="">Mobile</label>
                    <input id="mobile" type="text" name="mobile" class="form-control" placeholder="enter your mobile no" value="{{userinfos.mobile}}" >
                    </div>
                    <div class="form-group">
                    <label for="">Address</label>
                    <input id="address" style="height: 125px;"  type="text" name="address" class="form-control" placeholder="enter your address" value="{{userinfos.address}}" >
                    </div>
            </div>
        </div>
                <button type="submit" class="btn btn-success float-right px-4 col-md-3 ">Update</button>
                <button  class="btn btn-info float-right px-3 mr-1  col-md-3 "><a href="/" class="text-white "> Go back</a></button>
            </form>
        </div>
    </div>
</div>