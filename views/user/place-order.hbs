<section style="margin-top: 6rem;">
    <div class="container">
        <h2 class="text-center mt-4">Place your Order</h2>
    
    <form action="" id="checkout-form">
        <div class="row text-white">
            <div class="col-md-6">
                <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control border-success" type="text" id="name" name="name" >
                </div>
                <div class="form-group">
                <label for="addressline1">Address Line1</label>
                <input class="form-control border-success" type="text" id="addressline1" name="address1">
                </div>
                <div class="form-group">
                <label for="addressline2">Address Line2</label>
                <input class="form-control border-success" type="text" id="addressline2" name="address2">            
                </div>
                <div class="form-group">
                <label for="pincode">PinCode</label>
                <input class="form-control border-success" type="text" id="pincode" name="pincode">            
                </div>
                <div class="form-group">
                <label for="mobile">Mobile </label>
                <input class="form-control border-success" type="text" id="mobile" name="mobile">            
                <input hidden type="text" name="userId" value="{{userinfos._id}}">
                <input type="text" name="totalamount" value="{{totalvalue}}" hidden>
                </div>
            </div>
            <div class="col-md-6 text-center ">
                <div class="container mt-5 border border-light checkout p-5">
                    <h5>Total Amount : Rs.<b>{{totalvalue}}</b>/-</h5>
                    <hr>
                    <div class="payment">
                        <p>Payment method</p>
                        <label for="" class="radio in-line">
                            <input type="radio" name="payment-method" value="COD" >COD
                        </label>
                          <label for="" class="radio in-line pl-3">
                            <input type="radio" name="payment-method" value="Online">Online Payment
                        </label><br>
                        <button type="submit" class="btn btn-primary mt-3">Checkout</button>
                    </div>
                </div>    
            </div>
        </div>    
     </form>
    </div>
</section>


<script>
    $("#checkout-form").submit((e)=>{
        e.preventDefault()
        $.ajax({
            url:'/place-order',
            method:'post',
            data:$('#checkout-form').serialize(),
            success:(response)=>{
                alert('Order placed')
                if(response.status){
                
                    location.href="/ordersuccess"
                }
            }


        })
    })

</script>