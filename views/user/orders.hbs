<section style="margin-top: 6rem;">
    <div class="container">
        <h2  class="text-center text-white pt-2">Orders</h2 >
        <div class="row">
            <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Address</th>
                    <th>Amount</th>
                    <th>Payment</th>
                    <th>Payment Status</th>
                    <th>Products</th>
                    <th>Order Status <br>
                    at time/ <br>Expected-delivery-date</th>
                </tr>
                </thead>
                <tbody class="text-white">
                    {{#each orders}}
                    <tr>
                        <td>{{this.date}}</td>
                        <td>
                            {{this.address.name}} <br>
                            {{this.address.Firstaddress}}
                            <br>
                            {{this.address.Secondaddress}}
                            <br>
                            {{this.address.pincode}}
                            <br>
                            MB:{{this.address.mobile}}
                        </td>
                        <td>{{this.total}}</td>
                        <td>{{this.paidMethod}}</td>
                        <td>{{this.status}}</td>
                        <td>
                            <a href="/vieworderproducts/{{this._id}}" class="btn btn-primary">View products</a>
                        </td>
                        <td>{{this.orderStatus.status}}
                            <br>
                        {{this.orderStatus.updatedTime}}
                        <br>/
                        {{this.orderStatus.ExpectedDeliveryDate}}


                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            </div>
        </div>
    </div>
</section>