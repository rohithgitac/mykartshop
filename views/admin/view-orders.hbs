<section style="margin-top: 1rem;" >
 <div class="container ">
  
  <div class="row mt-1 text-white" >
    <div class="col-md-6">
    <h3 >All Orders Informations</h3> 
    </div>
  </div>
  <div class="table-responsive">
  <table class="table table-bordered mt-2 ">
    <thead>
      <tr>
        <th>User ID</th>
        <th>Name </th>
        <th>MobileNo. </th>
        <th>Payment Method & Products</th>
        <th>Total Price</th>
        <th>Order-status</th>
        <th>Order status</th>
      </tr>
    </thead>
    <tbody class="text-white">
        {{#each ordersdata}}
      <tr>
        <td>{{this.user}}</td>
        <td>{{this.address.name}}</td>
        <td>{{this.address.mobile}}</td>
        <td><div class="container"><div class="row"><div class="col-md-4">{{this.paidMethod}}</div><div class="col-md-8"><a href="/admin/vieworderproducts/{{this._id}}" class="btn btn-info">Products</a></div>
        </div></div></td>
        <td><h5>{{this.total}}</h5></td>
        <td class="text-center">{{this.orderStatus.status}}</td>
        <td class="text-center"><a href="/admin/changeorderstatus/{{this.user}}/{{this._id}}" class="btn btn-info">Change</a></td>
      </tr>
      {{/each}}
    </tbody>     
  </table>
  </div>
</div>
</section>