<div class="container" style="margin-top: 1rem;">
    <div class="row">
        <div class="col-md-8 mt-4 text-white">
            <h2>Change order status</h2>
            <form  name="orderstatus" action="/admin/changeorderstatus/{{userid}}/{{orderid}}" method="post">
                <div class="form-group pt-4">
                    <label for="">status</label>
                    <input id="status" type="text" name="status"  class="form-control" placeholder="change status" >
                </div>    
                <div class="form-group">
                    <label for="">Time</label>
                    <input id="time" type="datetime-local" name="time" class="form-control" placeholder="status editing time" >
                </div> 
                <div class="form-group">
                    <label for="">Delivery expected date</label>
                    <input id="delivery" type="date" name="delivery" class="form-control" placeholder="expected delivery date" >
                </div> 
                <input hidden type="text" name="user" value="{{userid}}"><input hidden name="order" type="text" value="{{orderid}}">
                <button type="submit" class="btn btn-success float-right ">Submit status</button>
            </form>
        </div>
    </div>
</div>