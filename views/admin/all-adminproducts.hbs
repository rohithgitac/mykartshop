<section style="margin-top: 1rem;" >
 <div class="container ">
  
  <div class="row mt-1 text-white" >
    <div class="col-md-6">
    <h3 >All Products Informations</h3> 
    </div>
  </div>
  <table class="table table-bordered mt-2 ">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Code</th>
        <th>Description</th>
        <th>Price</th>
        <th>Image</th>
      </tr>
    </thead>
    <tbody class="text-white">
        {{#each productsall}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.category}}</td>
        <td>{{this.code}}</td>
        <td>{{this.description}}</td>
        <td><h5>{{this.price}}</h5></td>
        <td class="text-center"><img  style=" width: 70px; height:80px;" src="/allproductimages/{{this._id}}.jpg" alt="its a phone"></td>
      </tr>
      {{/each}}
    </tbody>     
  </table>
</div>
</section>