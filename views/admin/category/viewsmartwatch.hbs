<section style="margin-top: 2rem;" class="">
    <div class="container ">
  
  <div class="row  text-white" >
    <h2>Smartwatch Products Informations</h2>
<a class="btn btn-success ml-auto mr-3 border-light pb-2 " style="color: whitesmoke;" href="/admin/category/mobileproducts/add-mobile">Add products <br>+</a>  </div>
  <table class="table table-bordered mt-2 ">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Code</th>
        <th>Description</th>
        <th>Price</th>
        <th>Image</th>
        <th>Access</th>
      </tr>
    </thead>
    <tbody class="text-white">
        {{#each mobilesarray}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.category}}</td>
        <td>{{this.code}}</td>
        <td>{{this.description}}</td>
        <td><h5>{{this.price}}</h5></td>
        <td class="text-center"><img  style="width: 50px; height: 50px;" src="/smartwatchimages/{{this._id}}.jpg" alt="its a phone"></td>
        <td class="text-center">
          <a href="/admin/smartwatchproducts/editproduct?id={{this._id}}" class="btn btn-primary">Edit</a>
          <a href="/admin/smartwatchproducts/deleteproduct?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure to delete {{this.name}}?')">Delete</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
</section>